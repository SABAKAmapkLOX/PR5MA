<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PR5MA.MainPage">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0">
            <Label Text="Результат"/>
            <Entry x:Name="enResult" IsReadOnly="True"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" Grid.Row="1" Spacing="10" Padding="10" HorizontalOptions="CenterAndExpand">
            <Button Text="1" Clicked="ButtonNumber_Clicked"/>
            <Button Text="2" Clicked="ButtonNumber_Clicked"/>
            <Button Text="3" Clicked="ButtonNumber_Clicked"/>
            <Button Text="+" Clicked="ButtonNumber_Clicked"/>
            <Button Text=")" Clicked="ButtonNumber_Clicked"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" Grid.Row="2" Spacing="10" Padding="10" HorizontalOptions="CenterAndExpand">
            <Button Text="4" Clicked="ButtonNumber_Clicked"/>
            <Button Text="5" Clicked="ButtonNumber_Clicked"/>
            <Button Text="6" Clicked="ButtonNumber_Clicked"/>
            <Button Text="-" Clicked="ButtonNumber_Clicked"/>
            <Button Text="(" Clicked="ButtonNumber_Clicked"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal" Grid.Row="3" Spacing="10" Padding="10"  HorizontalOptions="CenterAndExpand">
            <Button Text="7" Clicked="ButtonNumber_Clicked"/>
            <Button Text="8" Clicked="ButtonNumber_Clicked"/>
            <Button Text="9" Clicked="ButtonNumber_Clicked"/>
            <Button Text="*" Clicked="ButtonNumber_Clicked"/>
            <Button Text="/" Clicked="ButtonNumber_Clicked"/>
        </StackLayout>
        
        <StackLayout Orientation="Horizontal" Grid.Row="4" Spacing="10" Padding="10"  HorizontalOptions="CenterAndExpand">
            <Button Text="0" Clicked="ButtonNumber_Clicked"/>
            <Button Text="," Clicked="ButtonNumber_Clicked"/>
            <Button Text="=" Clicked="ButtonNumber_Clicked"/>
            <Button Text="DEL" Clicked="ButtonNumber_Clicked"/>
        </StackLayout>
        
    </Grid>
</ContentPage>
